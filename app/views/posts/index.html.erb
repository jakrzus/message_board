<h1>All Posts</h1>

<table class="table table-hover table-striped table-dark">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
      <th>Date posted</th>
    </tr>
  </thead>
  <tbody>
    <% @x=0 %>
    <% @posts.each do |post| %>
      <tr>
<td><%=@x+=1%></td>

        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
        <td>
          <%= post.user.email %>
        </td>
        <td>
          <%= post.created_at %>
        </td>
      </tr>

    <% end %>
  </tbody>
<%= link_to "New Post", new_post_path, style: "button", class: "btn btn-success" %>
</table>
